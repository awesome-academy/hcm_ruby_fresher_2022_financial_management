<li class="item type<%=category.category_type%>">
  <div class="task">
    <div class="icon"> </div>
    <div class="name"><%= category.name %></div>
  </div>
  
  <div class="status">
    <% if category.income? %>
      <div class="icon on"> </div>
    <% else %>
      <div class="icon off"> </div>
    <% end %>
    <div class="text"><%= category.category_type %></div>
  </div>
  
  <div class="status">
    <div class="text">  
      <i class="bi bi-alarm-fill"></i>
      <%= t "create_time", time: time_ago_in_words(category.created_at) %>
    </div>
  </div>
  
  <div class="statun">
    <div class="text">
      <i class="fa-solid fa-tent-arrow-left-right"></i>
      <%= category.id %>
    </div>
  </div>
  
  <div class="priority">
    <div class = "icon_name">
      <div class="add-button">
        <div class="sub-button tl"><%= t "edit" %></div>
        <div class="sub-button tr"><%= t "add" %></div>
        <div class="sub-button bl"><%= t "delete" %></div>
        <button type="button" class="sub-button br" data-toggle="modal" data-target="#modal<%=category.id%>">
          <%= t "view" %>
        </button>
      </div>
    </div>
  </div>
  <%= render "show" , object: category %>
</li>
