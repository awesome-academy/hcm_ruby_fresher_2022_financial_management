<%- if controller_name != 'sessions' %>
  <%= link_to t(".log_in"), new_user_session_path %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(".sign_up"), new_user_registration_path %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(".forgot"), new_user_password_path %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(".confirmation_instructions"), new_user_confirmation_path %><br />
<% end %>
<%= link_to t(".signin_google"), user_google_oauth2_omniauth_authorize_path, method: :post %>
